<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:padding="16dp"

    tools:context=".MainActivity">

    <TextView
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="English (United States)"
        android:id="@+id/league"
        android:drawableEnd="@drawable/baseline_arrow_drop_down_24"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


        <ImageView
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/league"
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="100dp"

            android:src="@drawable/logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <EditText
            app:layout_constraintTop_toBottomOf="@id/logo"
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:hint="Phone or email"
            android:padding="18dp"
            android:textSize="20sp"
            android:background="@drawable/rounded_corner"
            />
        <EditText
            app:layout_constraintTop_toBottomOf="@id/email"
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Password"
            android:padding="18dp"
            android:textSize="20sp"
            android:background="@drawable/rounded_corner" />
        <Button
            app:layout_constraintTop_toBottomOf="@id/password"
            android:id="@+id/masuk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:backgroundTint="#0866FE"
            android:text="Login"
            android:textAllCaps="false"/>
        <TextView
            app:layout_constraintTop_toBottomOf="@id/masuk"
            android:id="@+id/forgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Forgot Password?"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="#00082E"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            app:layout_constraintTop_toBottomOf="@id/forgot"
            android:id="@+id/akun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="130dp"
            android:text="Create new account"
            android:textAllCaps="false"
            android:background="@drawable/transparant_buttonn"
            />

        <ImageView
            app:layout_constraintTop_toBottomOf="@id/akun"
            android:id="@+id/newacc"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:src="@drawable/metawoy"
            android:layout_gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>









</androidx.constraintlayout.widget.ConstraintLayout>